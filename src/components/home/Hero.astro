---
import { Button } from '@nextui-org/react';

import hero1 from '../../assets/images/hero-1.jpg';
import hero2 from '../../assets/images/hero-2.jpg';
import hero3 from '../../assets/images/hero-3.jpg';

import GoogleCalendar from '../logos/GoogleCalendar.astro';
---

<section class="animate my-16 sm:my-20" id="inicio">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-16">
      <div class="flex flex-col items-start justify-between gap-8 sm:gap-10 lg:flex-row">
        <div class="flex max-w-xl flex-col items-start gap-4 sm:gap-6">
          <h1 class="text-4xl font-medium tracking-tight sm:text-5xl lg:text-6xl">
            Nos complace decirles que vamos a casarnos muy pronto
          </h1>

          <p class="text-lg text-stone-950 dark:text-stone-200/70 sm:text-xl">
            Este es nuestro sitio web donde compartiremos informacion acerca de los eventos a los
            dias proximos.
          </p>

          <div class="flex items-center gap-4">
            <Button
              client:load
              className="bg-primary cta text-stone-100 px-4 py-6"
              href="https://www.addevent.com/event/Fs18690643"
              referrerPolicy="no-referrer"
              target="_blank"
              as="a"
            >
              AÃ±adir al Calendario
              <span class="icon">
                <GoogleCalendar size={24} />
              </span>
            </Button>

            <a href="/invitacion.png" class="hover:underline" download> Descargar invitacion</a>
          </div>
        </div>

        <div
          class="justify-center4 relative z-30 mt-6 flex w-full items-center lg:mt-0 lg:max-w-[60%]"
        >
          <figure class="w-52">
            <img
              class="hero-1 absolute bottom-12 left-0 z-30 h-auto w-52 rounded-t-full border-8 border-primary dark:border-yellow-100 lg:left-12"
              src={hero2.src}
              alt="Hero picture"
            />
          </figure>

          <figure class="w-96">
            <img
              class="hero-2 relative top-32 z-30 h-auto w-full border-8 border-primary dark:border-yellow-100 lg:top-0 lg:z-10"
              src={hero1.src}
              alt="Hero picture"
            />
          </figure>

          <figure class="w-52">
            <img
              class="hero-3 absolute right-0 top-3 z-40 h-auto w-48 rounded-3xl border-8 border-primary dark:border-yellow-100 lg:right-8 lg:top-14 lg:z-0"
              src={hero3.src}
              alt="Hero picture"
            />
          </figure>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    padding: 0.35em;
    padding-left: 1.2em;
    font-size: 17px;
    border-radius: 0.9em;
    letter-spacing: 0.03em;
    height: 2.8em;
    padding-right: 3.3em;

    @apply relative flex items-center overflow-hidden bg-primary font-semibold text-slate-100 dark:bg-yellow-100 dark:text-stone-950;
  }

  .icon {
    margin-left: 1em;
    height: 2.2em;
    width: 2.2em;
    border-radius: 0.7em;
    box-shadow: 0.1em 0.1em 0.6em 0.1em #f7d07e;
    right: 0.3em;

    @apply absolute flex items-center justify-center bg-white transition-all delay-150;
  }

  .cta:hover .icon {
    width: calc(100% - 0.6em);
  }

  .cta .icon svg {
    width: 1.1em;
    transition: transform 0.2s;
    color: #cda44e;
  }

  .cta:hover .icon svg {
    transform: translateX(0.1em);
  }

  .cta:active .icon {
    transform: scale(0.95);
  }

  .hero-1,
  .hero-2,
  .hero-3 {
    opacity: 0;
    transition: ease 1000ms all;
  }

  .hero-1 {
    transform: translateX(-1000px);
  }
  .hero-2 {
    transform: scale(0.3);
  }
  .hero-3 {
    transform: translateX(1000px);
  }
  #inicio.visible .hero-2,
  #inicio.visible .hero-1,
  #inicio.visible .hero-3 {
    transform: translateY(0) translateX(0) scale(1);
    opacity: 1;
  }
</style>
